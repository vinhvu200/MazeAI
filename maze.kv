<RootWidgit>:

    GridLayout:
        cols: 3
        GridLayout:
            id: maze_board
            cols: 3
            size_hint_x: .45
            spacing: 10, 10
            padding: 10
        GridLayout:
            id: value_board
            spacing: 2.5, 2.5
            padding: 4
            size_hint_x: .45
            canvas:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
        GridLayout:
            padding: 5, 5, 5, 5
            rows: 9
            size_hint_x: .1
            canvas:
                Color:
                    rgba: 1, 1, 1, 0.9
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                id: progress_label
                font_size: '14sp'
                color: 1, 0, 0, 1
            Button:
                id: learn_toggle_button
                text: 'Learn'
            Button:
                id: reset_button
                text: 'Reset'
            Button:
                id: speed_button
                text: 'Speed:\nNormal'
                halign: 'center'
            Button:
                id: learn_method_button
                text: 'Method:\nQ'
                halign: 'center'
            Button:
                id: maze_one_button
                text: 'Map One'
            Button:
                id: maze_two_button
                text: 'Map Two'